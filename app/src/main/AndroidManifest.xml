<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.apps.fullandroidcourseclassa">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <application
        android:name=".breakingbadapp.BreakingBadApplication"
        android:allowBackup="true"
        android:icon="@drawable/dsc"
        android:label="@string/app_name"
        android:roundIcon="@drawable/dsc"
        android:supportsRtl="true"
        android:theme="@style/Theme.FullAndroidCourseClassA">
        <service
            android:name=".utils.FirebaseService"
            android:exported="false"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>

        <activity android:name=".ui.SplashScreen" />
        <activity android:name=".ui.CoroutineExamples" />
        <activity android:name=".ui.shoppinglist.ShoppingActivity" />
        <activity android:name=".ui.OnboardingScreens" />
        <activity android:name=".ui.BroadcastReceiverExample" />
        <activity android:name=".utils.NotificationExample" /> <!-- <activity android:name=".OurEvents" /> -->
        <activity android:name=".ui.HomeActivity" />
        <activity android:name=".ui.BaseActivity" />
        <activity android:name=".ui.loginsystem.RegistrationActivity" />
        <activity android:name=".ui.loginsystem.LoginActivity" /> <!-- <activity android:name=".TodoListExample" /> -->
        <activity android:name=".breakingbadapp.ui.BreakingBad"
            android:exported="true"
            tools:ignore="DuplicateActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>